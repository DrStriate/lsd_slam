{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "catkin all default",
            "type": "shell",
            "command": "catkin build --profile default --continue",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "catkin all debug",
            "type": "shell",
            "command": "catkin build --profile debug --continue",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "group": "build"
        },
        {
            "label": "ROS: central_catkin_make DEBUG",
            "type": "catkin_make",
            "args": [
                "--directory",
				"~/catkin_ws",
                "-j4",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
            ],
            "problemMatcher": "$catkin-gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ROS: central_catkin_make RELEASE",
            "type": "catkin_make",
            "args": [
                "--directory",
				"~/catkin_ws",
                "-j4",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
            ],
            "problemMatcher": "$catkin-gcc",
            "group": {
                "kind": "build",

            }
        },
        {
            "label": "ROS: make_lsd_slam_core DEBUG",
            "type": "catkin_make",
            "args": [
                "--directory",
				"~/catkin_ws/",
                "--pkg",
                "lsd_slam_core",
                "-j4",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
            ],
            "problemMatcher": "$catkin-gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ROS: make_lsd_slam_core RelWithDebInfo",
            "type": "catkin_make",
            "args": [
                "--directory",
				"~/catkin_ws/",
                "--pkg",
                "lsd_slam_core",
                "-j4",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
            ],
            "problemMatcher": "$catkin-gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ROS: make_lsd_slam_core RELEASE",
            "type": "catkin_make",
            "args": [
                "--directory",
				"~/catkin_ws/",
                "--pkg",
                "lsd_slam_core",
                "-j4",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
            ],
            "problemMatcher": "$catkin-gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
    ]
}